mixin design(data)
    +el({
        tag: 'section',
        class: 'design',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
    })&attributes(attributes)
        +el({
            class: 'design__image-wrap',
        })
            +el({
                tag: 'img',
                class: 'design__image',
                src: 'design01.jpg',
            })
        +el({
            class: 'design__text-wrap',
        })
            +el({
                tag: 'h3',
                class: 'design__heading',
                text: 'Дизайн',
            })
            +el({
                tag: 'p',
                text: 'Внешний вид скутера дышит идеями футуризма: ',
            })
            +list({
                mix: 'design__list',
                items: ['плавные линии', 'подсветка светодиодными индикаторами', 'рельефные бамперы, оснащенные защитными панелями']
            })
