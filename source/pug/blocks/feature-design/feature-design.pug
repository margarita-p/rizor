mixin feature-design(data)
    +el({
        tag: 'section',
        class: 'feature-design',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
    })&attributes(attributes)
        +el({
            class: 'feature-design__image-container',
        })
            +el({
                tag: 'img',
                class: 'feature-design__image',
                src: 'feature-design01.jpg',
            })
        +el({
            tag: 'h3',
            class: 'feature-design__heading',
            text: 'Дизайн',
        })
        +el({
            tag: 'p',
            text: 'Внешний вид скутера дышит идеями футуризма: ',
        })
        +list({
            mix: 'feature-design__list',
            items: ['плавные линии', 'подсветка светодиодными индикаторами', 'рельефные бамперы, оснащенные защитными панелями']
        })
